options=('!emptydirs')
depends=('perl>=5.8.0')
makedepends=()
url='https://metacpan.org/release/App-FatPacker'
source=('http://search.cpan.org/CPAN/authors/id/M/MS/MSTROUT/App-FatPacker-0.010008.tar.gz')
